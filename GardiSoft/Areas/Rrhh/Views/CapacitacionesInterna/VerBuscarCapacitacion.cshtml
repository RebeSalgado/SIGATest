
@{
    ViewBag.Title = "VerBuscarCapacitacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>VerBuscarCapacitacion</h2>

@using (Ajax.BeginForm("BuscarCapacitacion", new AjaxOptions { OnSuccess = "onSuccess", UpdateTargetId = "capacitaciones" }))
{
    @Html.AntiForgeryToken()

    <div class="well">
        <div class="form-inline">


            <h4>Seleccione o busque una capacitación</h4>

            <hr />


            @Html.Label("Mes")

            @Html.DropDownList("Meses", null, htmlAttributes: new { @class = "form-control" })

            @Html.Label("Año")

            @Html.DropDownList("Año", null, htmlAttributes: new { @class = "form-control" })

            <input type="submit" value="Buscar" class="btn btn-success" />




        </div>
    </div>


}

<div id="capacitaciones">

    @Html.Action("BuscarCapacitacion", new { Meses = DateTime.Now.Month, Año = DateTime.Now.Year })

</div>


@section Scripts{


    <script type="text/javascript">


        $(document).ready(function () {

      

        });

    </script>
}
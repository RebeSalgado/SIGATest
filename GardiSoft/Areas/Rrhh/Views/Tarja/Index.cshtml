@model Entidades.Rrhh.Tarja.Tarja


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Sistema de Tarjas</h2>
<hr />
<br />
<br />

@using (Html.BeginForm("Crear", "Tarja", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row" style="min-height:400px;margin-bottom:10px">
        <div class="col-lg-12">



            @if (ViewBag.Tarjas.Count > 0)
            {
                <h5>Selecciona un tarja para modificar la asistencia o <a href="#" class="crear">Crea una nueva</a> </h5>
                <div class="col-md-4" style="margin-top:20px;">
                    @foreach (Entidades.Rrhh.Tarja.Tarja item in ViewBag.Tarjas)
                    {
                        <div class="list-group">
                            <a class="list-group-item" href="@Url.Action("Asistencia","Tarja",new { Id = item.Id, Area = "Rrhh" }) ">
                                <span class="badge"><li class="glyphicon glyphicon-pencil"></li></span>
                                @item.NombreTarja
                            </a>

                        </div>


                    }
                </div>


            }
            else
            {
                <p class="lead">Aquí aparecerán sus tarjas, para comenzar debe <buttom class="btn btn-primary crear">Crear una Tarja</buttom> </p>

            }



        </div>

        <div class="modal" id="mdCrear">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" aria-hidden="true" type="button" data-dismiss="modal">X</button>
                        <h4 class="modal-title">Nueva Tarja</h4>
                    </div>
                    <div class="modal-body">
                        <div>
                            <div class="form-horizontal">
                                <h4>Escoja un nombre para su tarja</h4>
                                <hr />

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NombreTarja, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.NombreTarja, htmlAttributes: new { @class = "form-control" }) 
                                        @Html.ValidationMessageFor(model => model.NombreTarja, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Fecha, "Año de Tarja", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Fecha,  htmlAttributes : new { @class = "form-control" } )
                                        @Html.ValidationMessageFor(model => model.NombreTarja, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-default" type="button" data-dismiss="modal">Cancelar</button>
                        <input type="submit" value="Comenzar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

            $(".crear").on('click', function () {

                $("#mdCrear").modal('show');

            });


        });



    </script>


}



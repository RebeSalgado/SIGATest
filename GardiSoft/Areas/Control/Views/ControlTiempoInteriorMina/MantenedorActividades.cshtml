
@{
    ViewBag.Title = "MantenedorActividades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mantenedor Actividades</h2>

<div class="well">

    <h4>
        Utilice el formulario para registrar
        los horarios
    </h4>
    <hr />
    <div class="form-horizontal ">

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Unidad de medida</label>
            <div class="col-md-10">
                <select id="ddlUnidad" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Tolerancia 1</label>
            <div class="col-md-10">
                <input type="text" class="form-control txtTolerancia1">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Tolerancia 2</label>
            <div class="col-md-10">
                <input type="text" class="form-control txtTolerancia2">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Estado</label>
            <div class="col-md-10">
                <select id="ddlEstado" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Area</label>
            <div class="col-md-10">
                <select id="ddlArea" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="text-align:left">
                <input type="button" value="Siguiente Paso" id="btnSiguientePaso" class="btn btn-success">
            </div>
        </div>

        <hr />
    </div>
</div>


@*--MODAL AGREGAR CONTROL --*@

<div class="modal fade " id="mdlControl" tabindex="0" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Control</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Nivel</label>
                        <div class="col-md-10">
                            <select id="ddlNivel" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Turno</label>
                        <div class="col-md-10">
                            <select id="ddlTurno" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Indicador</label>
                        <div class="col-md-10">
                            <select id="ddlIndicador" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Nombre 1</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control txtNombre">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Fecha Inicion Medición</label>
                        <div class="col-md-10">
                            <input type="date" class="form-control txtNombre">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Meta</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control txtMeta">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success GuardarNombre" id="GuardarNombre" data-dismiss="modal">Guardar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script type="text/javascript">

    $(document).ready(function () {

        // ABRIR CONTROL

        $(document).on('click', "#btnSiguientePaso", function () {
           // idplan = $(this).attr('idplan');

            $("#mdlControl").modal('show');
            //var cant = $(this).closest('tr').find("td:eq(1)").html();
           // $("#txtNuevoNombre").val(cant);

        });
       
    });

    </script>
}
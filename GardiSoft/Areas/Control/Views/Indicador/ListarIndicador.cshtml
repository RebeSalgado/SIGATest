@model IEnumerable<Entidades.Control.Indicador>

<h4>Detalle Indicadores</h4>
<div class="well" style="overflow-x:auto ">
    <table class="table table-hover">
        <tr>
            <th class="success; sorting">
                Indicador
               
            </th>
            <th class="success">
                Frecuencia
                
            </th>
            <th class="success">
                Proyecto
                
            </th>
            <th class="success">
                Area
                
            </th>
            <th class="success">
                Nivel
                
            </th>
            <th class="success">
                Turno
                
            </th>
            <th class="success"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Frecuencia)
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area.Nombre)
                   
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Nivel_Control.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turno.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarIndicador", new { id = item.Id_Indicador }) |
                    @Html.ActionLink("Detalles", "DetallesIndicador", new { id = item.Id_Indicador }) |
                    @Html.ActionLink("Borrar", "BorrarIndicador", new { id = item.Id_Indicador })
                </td>
            </tr>
        }

    </table>

@model IEnumerable<Entidades.Control.Turno>


<div class="well" style="overflow-x:auto ">
    <p>
        @Html.ActionLink("Crear Nuevo Turno", "CrearTurno")
    </p>
    <table class="table table-hover">
        <tr>
            <th class="success">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="success"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarTurno", new { id = item.Id_Turno }) |
                    @Html.ActionLink("Detalles", "DetallesTurno", new { id = item.Id_Turno }) |
                    @Html.ActionLink("Borrar", "BorrarTurno", new { id = item.Id_Turno })
                </td>
            </tr>
        }

    </table>
    </div>
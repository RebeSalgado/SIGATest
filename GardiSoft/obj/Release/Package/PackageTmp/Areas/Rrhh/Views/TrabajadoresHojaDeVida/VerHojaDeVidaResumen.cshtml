
@{
    ViewBag.Title = "VerHojaDeVidaResumen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Resumen de trabajadores</h2>
<h4>Listado de trabajadores y su comportamiento</h4>



<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Licencias</th>
            <th>Cursos Externos</th>
            <th>Excepciones</th>
            <th>Detalles</th>
        </tr>
    </thead>

    <tbody id="resumen">
      
    </tbody>
</table>


@section Scripts{


    <script type="text/javascript">


        $(document).ready(function () {

         
          


            $.ajax({
                    url: '@Url.Action("VerTrabajadoresHistorialDeCargos", "TrabajadoresHojaDeVida")',
                    datatype: 'html',
                    success: function (data) {
                        var data = eval(data);

                        var texto = "";
                        $.each(data, function (i, item) {
                            texto += "<tr><td>" + item.Nombre + "</td><td>" + item.Licencias + "</td><td>" + item.CursosExternos + "</td><td>" + item.Excepciones + "</td><td><a href='/Rrhh/TrabajadoresHojaDeVida/Index?rut="+item.rut+"'>ver</a></td></tr>";                            

                        });

                        $("#resumen").html(texto);
                        $("table").tabla();


         

                    }
                });

        });

    </script>
}



